<%- include('../layout/adminLayout/adminheader.ejs') %>
<%- include('../layout/adminLayout/adminnav.ejs') %>
        <!-- Content Start -->
       
                       <!-- Category -->
            <div class="container-fluid pt-5 px-4">
                <h1>Banner</h1>
                <a href="/admin/addBanner"><button class="btn btn-outline-success">Add Banner</button></a>
                <div class="row pt-4 g-9">
                    <div class="col-12">
                        <div class="bg-light rounded h-100 p-4">
                            <table class="table" id="categorytable">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Image</th>
                                        <th scope="col">Heading</th>
                                        <th scope="col">Discription</th>
                                        <th scope="col">Satus</th>
                                        <th scope="col">Delete</th>
                                        <th scope="col">Option</th>
                                        
                                    </tr>
                                </thead>

                                <tbody>
                                   
                                    <% data.forEach((value,index)=>{ %>
                                    
                                        <tr>
                                            <td><%= index+1 %></td>
                                            <td><img src="/product_images/<%= value.image %>" width="288px" height="150px" alt="<%= value.image %>"></td>
                                            <td><%= value.heading %></td>
                                            <td><%= value.discription %></td>
                                            <td><%= value.status %></td>
                                            <td><a href="/admin/deletebanner?id=<%=value._id %>" class="edit" style="color: rgb(239, 16, 16);"  ><i class="material-icons"  onclick="return confirm('Are you sure you want to delete this banner?');"  data-toggle="tooltip" title="Delete">&#xE872;</i></a></td>
                                            <% if(value.status==false){ %>
                                                <td><a href="/admin/showBanner?id=<%= value._id %>"><button class="btn btn-success" onclick="return showconfirm(this)">show</button></a></td>
                                        </tr>

                                            <% }else{ %>
                                            <td><a href="/admin/showBanner?id=<%= value._id %>"><button class="btn btn-danger" onclick="return hideconfirm(this)">hide</button></a></td>
                                            </tr>
                                            <% } %>
                                      <% })%>
                                            
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
                <!-- Table End -->
        
            </div>
       
        
        

    </div>
        <!-- Content End -->


        <%- include('../layout/adminLayout/adminfooter.ejs') %>