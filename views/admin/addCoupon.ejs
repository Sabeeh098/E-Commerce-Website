<%- include('../layout/adminLayout/adminheader.ejs') %>
<%- include('../layout/adminLayout/adminnav.ejs') %>
<div class="content col-lg-10">
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            
            
            <div class="col-sm-12 col-xl-6">
                <div class="bg-light rounded h-100 p-4">
                    <h6 class="mb-4">Add Coupon</h6>
                      <!-- Floating Labels Form -->
      <form class="row g-3" action="" method="post">
        <div class="col-md-12">
          <div class="form-floating">
            <label for="floatingName">Coupon Name</label>
            <input type="text" class="form-control" name="couponName" id="floatingName" placeholder="Coupon name" required>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-floating">
            <label for="floatingEmail">Enter code</label>
            <input type="text" class="form-control" name="couponCode" id="floatingEmail" placeholder="Coupon code" required>
          </div>
        </div>
      
        <div class="col-md-6">
            <div class="form-floating">
              <label for="floatingEmail">Start Date</label>
              <input type="date" class="form-control" name="startDate" id="floatingEmail" placeholder="Start date" required>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-floating">
              <label for="floatingPassword">End Date</label>
              <input type="date" class="form-control" name="endDate" id="floatingPassword" placeholder="End Date" required>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-floating">
              <label for="floatingEmail">Minimum Amount</label>
              <input type="text" class="form-control" name="minAmount" id="floatingEmail" placeholder="Minimum amount" required>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-floating">
              <label for="floatingPassword">Max Discount</label>
              <input type="text" class="form-control" name="maxDiscount" id="floatingPassword" placeholder="Maximum discount" required>
            </div>
          </div>
       
        <div class="col-md-6">
          <div class="col-md-12">
            <div class="form-floating">
              <label for="floatingCity">Quantity</label>
              <input type="text" class="form-control" name="quantity" id="floatingCity" placeholder="Quantity" required>
            </div>
          </div>
        </div>
     
        <div class="text-center">
          <button type="submit" class="btn btn-primary">Submit</button>
          <button type="reset" class="btn btn-secondary">Reset</button>
        </div>
        <% if(typeof message != 'undefined'){%>

           <p style="color: rgb(160, 35, 35);"><%= message%></p>
            
       <% } %>
      </form><!-- End floating Labels Form -->

                </div>
            </div>
            
        </div>
    </div>
           
            
</div>     
<!-- Content End -->
</div>




<%- include('../layout/adminLayout/adminfooter.ejs') %>