<%- include('../layout/adminLayout/adminheader.ejs') %>
<%- include('../layout/adminLayout/adminnav.ejs') %>



<div class="col-lg-10">
  <div class="card">
    <div class="card-body">
      <h3 class="mb-4">Category</h3>
      <a href="/admin/addCategory"><button class="btn btn-outline-dark mb-4">Add Category</button></a>
        
      <div class="table-responsive">

        <%
             if(data.length > 0){
        %>
           
        <table class="table">
            <thead> 
               <tr>
                    <th scope="col">#</th>
                    <th scope="col">Category</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                
                <%data.forEach(function(user,index){%>
                <tr>
                    
                    <td><%=index+1%></td>
                    <td><%=user.name%></td>
                  
                    
                    <td>
                        <a href="/admin/deleteCategory?id=<%=user._id%>" onclick="return confirm('Are you sure you want to delete this category?');"><button type="button" class="btn btn-sm btn-sm-square btn-danger m-2">Delete</button></a>
                    </td>
                </tr>
                
                <%
                 })%>
            </tbody>
        </table>
        
        <%
        }else{
        %>
            <div><H3>Category Empty</H3></div>
        <%
        }
        %>
    </div>

      </div>
    </div>
  </div>
  </div>
  <%- include('../layout/adminLayout/adminfooter.ejs') %>